      "@slx/shell-domain": ["libs/shell/domain/src/index.ts"],
      "@slx/shell-feature-layout": ["libs/shell/feature-layout/src/index.ts"],
      "@slx/shell-feature-top-bar": ["libs/shell/feature-top-bar/src/index.ts"],
      "@slx/shell-feature-controls": ["libs/shell/feature-controls/src/index.ts"],

      "@slx/extra-feature-shell": ["libs/extra/feature-shell/src/index.ts"],
