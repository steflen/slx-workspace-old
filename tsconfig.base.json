      "@slx/platform-shell-mobile": ["libs/platform/shell-mobile/src/index.ts"],
      "@slx/platform-shell-desktop": ["libs/platform/shell-desktop/src/index.ts"],
      "@slx/platform-domain": ["libs/platform/domain/src/index.ts"],
