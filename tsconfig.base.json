      "@slx/settings-shell-web": ["libs/settings/shell-web/src/index.ts"],
      "@slx/settings-shell-desktop": ["libs/settings/shell-desktop/src/index.ts"],
      "@slx/settings-shell-mobile": ["libs/settings/shell-mobile/src/index.ts"],
      "@slx/settings-domain": ["libs/settings/domain/src/index.ts"],
      "@slx/settings-feature-locale": ["libs/settings/feature-locale/src/index.ts"],
      "@slx/settings-feature-language": ["libs/settings/feature-language/src/index.ts"],
      "@slx/settings-feature-look-and-feel": ["libs/settings/feature-look-and-feel/src/index.ts"],
      "@slx/settings-feature-time-and-date": ["libs/settings/feature-time-and-date/src/index.ts"],
